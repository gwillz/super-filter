<h1>This is field parent</h1>
<form method="post">
    {{ csrfInput() }}
    {{ actionInput('super-filter/super-filter/filter') }}

        {% for field in fields %}
                <div class="form-group">
                        <label>{{ field.object.name }}</label>
                        <div class="input">
                                {{ field.html()|raw }}
                        </div>
                </div>
        {% endfor %}
        {% if options.enableVue %}
            <button @click="submitFilter" type="button">Filter</button> <button type="button" name="reset" value="1">Clear</button>
        {% else %}
            <button type="submit">Filter</button> <button type="submit" name="reset" value="1">Clear</button>
        {% endif %}
</form>
