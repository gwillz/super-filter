<h1>This is sort parent</h1>
<form method="post">
    {{ csrfInput() }}
    {{ actionInput('super-filter/super-filter/filter') }}
        <select name="sort">
                {% for item in sorts %}
                        {% set orderAsc = item.orderBy ~ '-asc' %}
                        <option {{ selected == orderAsc ? 'selected' : ''  }} value="{{ orderAsc }}">
                                {{  item.name }} Ascending
                        </option>

                        {% set orderDesc = item.orderBy ~ '-desc' %}
                        <option {{ selected == orderDesc ? 'selected' : ''  }} value="{{ orderDesc }}">
                                {{  item.name }} Descending
                        </option>
                {% endfor %}
        </select>

    <button type="submit">Sort</button>
</form>
