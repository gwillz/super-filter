<div id="search-app">
    <div>
        <div>
        <search-list :config="{{ config }}"></search-list>
        </div>
    </div>
</div>
<script type="text/javascript">
    window.csrfTokenName = "{{ craft.app.config.general.csrfTokenName|e('js') }}";
    window.csrfTokenValue = "{{ craft.app.request.csrfToken|e('js') }}";
</script>
<script type="text/x-template" id="search-list">
    <div>
        <h1>search list here</h1>
        <div class="loader" v-if="loading">Loading...</div>
        <div class="row" v-for="entry in items">
            <div class="col3">
                <h2>${ entry.title }</h2>
                <div>===========</div>
                <div class="content">
                    ${ entry.contentText }
                </div>
            </div>
        </div>

        <b-pagination
                v-if="config.total"
                v-model="currentPage"
                :total-rows="config.total"
                :per-page="config.limit"
                aria-controls="my-table"
                @input="updateList(currentPage)"
        ></b-pagination>
    </div>
</script>

<script>
    let app = new Vue({
        el: "#search-app"
    });
</script>
